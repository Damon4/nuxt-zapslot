{
  "name": "zapslot",
  "private": true,
  "type": "module",
  "description": "Modern appointment booking platform built with Nuxt 3, Better Auth, and Prisma",
  "scripts": {
    "build": "tsx scripts/build-with-migrations.ts",
    "build:simple": "nuxt build",
    "dev": "nuxt dev",
    "dev:migrate": "tsx scripts/dev-with-migrations.ts",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && prisma generate && prisma migrate deploy",
    "migrate": "tsx scripts/run-migrations.ts",
    "migrate:reset": "prisma migrate reset --force && tsx scripts/run-migrations.ts",
    "migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "tsx prisma/seed.production.ts",
    "db:verify": "tsx scripts/verify-seeding.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{vue,ts,json}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.18",
    "@fullcalendar/daygrid": "^6.1.18",
    "@fullcalendar/interaction": "^6.1.18",
    "@fullcalendar/timegrid": "^6.1.18",
    "@fullcalendar/vue3": "^6.1.18",
    "@nuxt/icon": "^1.15.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/client": "^6.13.0",
    "better-auth": "^1.3.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "nuxt": "^4.0.3",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/tabler": "^1.2.20",
    "@nuxt/eslint": "^1.8.0",
    "@tailwindcss/vite": "^4.1.11",
    "daisyui": "^5.0.50",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.13.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3"
  }
}
